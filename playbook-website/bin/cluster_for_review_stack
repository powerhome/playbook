#!/bin/bash

pr_number=$1
mode=${2:-"long"}
clusters=("hq" "gm" "px")

function find_cluster_for_review_stack() {
    found=$(kubectl --ignore-not-found=true --context wc-beta-${1} get namespace playbook-${pr_number})

    if [[ -n $found ]];
    then
        if [ "$mode" == "short" ];
        then
            echo $1
        else
            echo "wc-beta-${1}"
        fi
        exit 0
    fi
}

for cluster in ${clusters[@]}
do
  find_cluster_for_review_stack $cluster
done
