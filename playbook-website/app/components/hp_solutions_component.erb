<%= pb_rails("background", props: {
    background_color: "light",
    padding: "xl"
}) do %>
    <%= pb_rails("flex", props: {
        width: "100",
        max_width: "xxl",
        align_items: { xs: "center", sm: "start" },
        flex_direction: { xs: "column", sm: "column", md: "column", lg: "column", xl: "row", xxl: "row" },
    }) do %>
        <%= pb_rails("flex/flex_item", props: {
            padding_bottom: "sm",
            padding_top: "lg"
        }) do %>
            <%= pb_rails("body", props: {
                text: "DESIGN, DEVELOP, DELIVER",
                text_align: { xs: "center", sm: "start" },
                color: "link"
            }) %>
        <% end %>
        <%= pb_rails("flex/flex_item", props: {
            padding_bottom: { xs: "lg", sm: "sm", md: "sm", lg: "sm", xl: "sm", xxl: "sm" },
        }) do %>
            <%= pb_rails("title", props: {
                text: "Solutions writeen in multiple languages.",
                text_align: "center",
                tag: "h3",
                size: 3,
                display: { xs: "flex", sm: "none", md: "none", lg: "none", xl: "none", xxl: "none" }
            }) %>
            <%= pb_rails("title", props: {
                text: "Create solutions to repetitive problems, for multiple languages and access to anywhere!",
                text_align: "start",
                tag: "h2",
                size: 2,
                display: { xs: "none", sm: "flex" }
            }) %>
        <% end %>
        <%= pb_rails("flex/flex_item", props: {
            padding_bottom: { xs: "lg", sm: "xl", md: "xl", lg: "xl", xl: "xl", xxl: "xl" },
        }) do %>
            <%= pb_rails("body", props: {
                text: "Playbook gives designers and developers the frameworks they need to create engaging product experiences.",
                text_align: { xs: "center", sm: "start" },
                color: "light",
                display: { xs: "flex", sm: "none", md: "none", lg: "none", xl: "none", xxl: "none" }
            }) %>
            <%= pb_rails("body", props: {
                text: "Playbook was created for Power by Power. Playbook is an open-source, cross-platform design system that gives designers and developers the frameworks they need to create engaging product experiencesâ€”accessibility, internationalization, and performance included.",
                text_align: { xs: "center", sm: "start" },
                color: "light",
                display: { xs: "none", sm: "flex" }
            }) %>
        <% end %>
        <%= pb_rails("flex/flex_item", props: {
            width: "100",
            display: { xs: "none", sm: "flex" }
        }) do %>
            <%= pb_rails("flex", props: {
                flex_grow: 1,
                justify: "between",
                gap: "md"
            }) do %>
                <%= pb_rails("flex/flex_item", props: { flex_grow: 1 }) do %>
                    <%= pb_rails("card", props: {
                            shadow: "deeper",
                            border_radius: "lg",
                            cursor: "pointer",
                            hover: { scale: "sm" }
                    })  do %>
                        <%= pb_rails("image", props: {
                            width: "100",
                            alt: "react logo",
                            size: "xs",
                            url: asset_pack_path("media/images/hp-react-solutions.svg")
                        }) %>
                    <% end %>
                <% end %>
                <%= pb_rails("flex/flex_item", props: { flex_grow: 1 }) do %>
                    <%= pb_rails("card", props: {
                            shadow: "deeper",
                            border_radius: "lg",
                            cursor: "pointer",
                            hover: { scale: "sm" }
                    })  do %>
                        <%= pb_rails("image", props: {
                            width: "100",
                            alt: "rails logo",
                            size: "xs",
                            url: asset_pack_path("media/images/hp-rails-solutions.svg")
                        }) %>
                    <% end %>
                <% end %>
                <%= pb_rails("flex/flex_item", props: { flex_grow: 1 }) do %>
                    <%= pb_rails("card", props: {
                            shadow: "deeper",
                            border_radius: "lg",
                            cursor: "pointer",
                            hover: { scale: "sm" }
                    })  do %>
                        <%= pb_rails("image", props: {
                            width: "100",
                            alt: "htmlcss logo",
                            size: "xs",
                            url: asset_pack_path("media/images/hp-htmlcss-solutions.svg")
                        }) %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
        <%= pb_rails("flex/flex_item", props: {
            width: "100",
            text_align: "center",
            padding_top: { xs: "none", sm: "xl", md: "xl", lg: "xl", xl: "xl", xxl: "xl" }
        }) do %>
            <%= pb_rails("button", props: {
                text: "Explore Playbook Solutions",
                icon: "arrow-right",
                link: "/guides/getting_started",
                icon_right: true,
                size: "lg"
            }) %>
        <% end %>
    <% end %>
<% end %>