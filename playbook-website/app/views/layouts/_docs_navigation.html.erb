<% if @navigation.present? %>
  <%= pb_rails("nav", props: { orientation: "vertical", variant: "bold", padding_y: "sm" }) do %>
    <%= pb_rails("nav/item", props: {
        link: doc_link(@parent),
        margin_bottom: "none",
        margin_x: "xs",
        icon_left: "angle-down",
        active: @page.nil?,
      }) do %>
      <%= pb_rails("caption", props: { size: "xs", color:"default", text: @parent.titleize, dark: @page.nil? }) %>
    <% end %>
    <% @navigation.each do |page_name| %>
      <%= pb_rails("nav/item", props: {
        link: doc_link(@parent, page_name),
        margin_y: "none",
        margin_left: "lg",
        margin_right: "xs",
        active: (@page.present? && @page == page_name),
      }) do %>
        <%= pb_rails("caption", props: { size: "xs", color:"default", text: page_name.titleize, dark: (@page.present? && @page == page_name) }) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>