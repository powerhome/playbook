<%= render partial: "pages/visual_guidelines_partials/partial_title",
  locals: {
    title: "Typography",
    title_size: 1,
    description: "Odds are, you might want to build or expand upon the text patterns we have
                  provided. Below are the tokens that are available for you and your
                  typography needs.",
    global_props: false
  }
%>
<%= pb_rails("title", props: {
  text: "Tokens",
  tag: "h3",
  size: 4
}) %>
<%= pb_rails("body", props: {
  tag: "p",
  margin_bottom: "lg",
  margin_top: "xs"
}) do %>
  Make up your own styles using Playbook tokens to keep your site consistent.
<% end %>
<%= pb_rails("card", props: { shadow: "deep", margin_bottom: "none", padding: "none" }) do %>
  <%= render "pages/visual_guidelines_partials/typography_headings"%>
  <%= pb_rails("section_separator") %>
  <%= render "pages/visual_guidelines_partials/typography_size"%>
  <%= pb_rails("section_separator") %>
  <%= render "pages/visual_guidelines_partials/typography_spacing"%>
  <%= render partial: "pages/visual_guidelines_partials/partial_code_example",
    locals: {
      example: "app/views/pages/code_snippets/typography_tokens.txt"
    }
  %>
<% end %>
