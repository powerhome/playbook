<%= render partial: "pages/visual_guidelines_partials/partial_title",
  locals: {
    title: "Max Width",
    title_size: 1,
    description: "When building your interface it is common to add max width to specific kits so the interface
                  looks good at all sizes. We've made it easy to add max with ANY kit through our global props.
                  See below:",
    global_props: true
  }
%>
<%= pb_rails("card", props: { shadow: "deep", margin_bottom: "none", padding: "none" }) do %>
  <%= render "pages/visual_guidelines_partials/pb_doc_max_width" %>
  <%= pb_rails("section_separator", props: { padding: "sm" }) %>
  <%= render partial: "pages/visual_guidelines_partials/partial_props",
    locals: {
      props: ["maxWidth"],
      values: %w[xs sm md lg xl]
    }
  %>
  <%= render partial: "pages/visual_guidelines_partials/partial_code_example",
    locals: {
      example: "app/views/pages/code_snippets/width_jsx.txt"
    }
  %>
<% end %>
