<%= pb_rails("title", props: {
  margin_top: "xl",
  padding_top: "xl",
  size: title_size,
  tag: "h2",
  text: title
}) %>
<%= pb_rails("body", props: {
  margin_bottom: "lg",
  margin_top: "xs",
  tag: "p",
  text: description
}) %>
<% if global_props %>
  <%= pb_rails("title", props: {
    size: 4,
    tag: "h3",
    text: "Global Props"
  }) %>
  <%= pb_rails("body", props: {
    margin_bottom: "lg",
    margin_top: "xs",
    tag: "p"
  }) do %>
    Available in every kit. These are added globally as they are most flexible when developing.
  <% end %>
<% end %>
