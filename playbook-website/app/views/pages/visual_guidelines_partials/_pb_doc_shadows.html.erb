<%= pb_rails("flex", props: {
  orientation: "column",
  align: "stretch",
  justify: "center",
  padding_x: "xl",
  padding_y: "md"
}) do %>
  <%= pb_rails("card", props: {
    margin_y: "sm",
    padding: "none",
    shadow: "deep"
  }) do %>
    <%= pb_rails("flex", props: {
      align: "center",
      justify: "between",
      wrap: true
    }) do %>
      <%= pb_rails("flex", props: { align: "center", wrap: true }) do %>
        <%= pb_rails("circle_icon_button", props: {
          icon: "copy",
          padding_right: "xs",
          variant: "link"
        }) %>
        <span>$shadow_deep</span>
      <% end %>
      <%= pb_rails("caption", props: {
        margin_left: "sm",
        padding_right: "xs",
        size: "xs",
        text: "value: 0 4px 10px 0 rgb(60 106 172 / 16%)"
      }) %>
    <% end %>
  <% end %>
  <br>
  <%= pb_rails("card", props: {
    margin_y: "sm",
    padding: "none",
    shadow: "deeper"
  }) do %>
    <%= pb_rails("flex", props: {
      align: "center",
      justify: "between",
      wrap: true
    }) do %>
      <%= pb_rails("flex", props: { align: "center", wrap: true }) do %>
        <%= pb_rails("circle_icon_button", props: {
          icon: "copy",
          padding_right: "xs",
          variant: "link"
        }) %>
        <span>$shadow_deeper</span>
      <% end %>
      <%= pb_rails("caption", props: {
        margin_left: "sm",
        padding_right: "xs",
        size: "xs",
        text: "value: 0 12px 28px 0 rgb(60 106 172 / 18%)"
      }) %>
    <% end %>
  <% end %>
  <br>
  <%= pb_rails("card", props: {
    margin_y: "sm",
    padding: "none",
    shadow: "deepest"
  }) do %>
    <%= pb_rails("flex", props: {
      align: "center",
      justify: "between",
      wrap: true
    }) do %>
      <%= pb_rails("flex", props: { align: "center", wrap: true }) do %>
        <%= pb_rails("circle_icon_button", props: {
          icon: "copy",
          padding_right: "xs",
          variant: "link"
        }) %>
        <span>$shadow_deepest</span>
      <% end %>
      <%= pb_rails("caption", props: {
        margin_left: "sm",
        padding_right: "xs",
        size: "xs",
        text: "value: 0 30px 38px 4px rgb(60 106 172 / 20%), 0 2px 14px 4px rgb(60 106 172 / 10%)"
      }) %>
    <% end %>
  <% end %>
<% end %>
