<%= render partial: "pages/visual_guidelines_partials/partial_title",
  locals: {
    title: "Spacing",
    title_size: 1,
    description: "Used for building Kits: Spacing is sized by 8px which serves as the starting point and base
                  that all spacing options follow.",
    global_props: true
  }
%>
<%= pb_rails("card", props: { shadow: "deep", margin_bottom: "none", padding: "none" }) do %>
  <%= render partial: "pages/visual_guidelines_partials/partial_props",
    locals: {
      props: %w[margin marginLeft marginBottom marginRight marginTop marginX marginY
                padding paddingBottom paddingLeft paddingRight paddingTop paddingX paddingY],
      values: ["none", "xs", "sm", "md", "lg", "xl"]
    }
  %>
  <%= render partial: "pages/visual_guidelines_partials/partial_code_example",
    locals: {
      example: "app/views/pages/code_snippets/spacing_global_props_jsx.txt"
    }
  %>
<% end %>

<%= pb_rails("title", props: { text: "Tokens", tag: "h3", size: 4, margin_top: "xl" }) %>
<%= pb_rails("body", props: { tag: "p", margin_bottom: "lg", margin_top: "xs" }) do %>
  Make your own sytles using Playbook tokens to keep your site consistent.
<% end %>

<%= pb_rails("card", props: { shadow: "deep", margin_bottom: "none", padding: "none" }) do %>
  <%= render "pages/visual_guidelines_partials/pb_doc_spacing_tokens" %>
  <%= render partial: "pages/visual_guidelines_partials/partial_code_example",
    locals: {
      example: "app/views/pages/code_snippets/spacing_tokens_jsx.txt"
    }
  %>
<% end %>
