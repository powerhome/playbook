<%= pb_rails("title", props: {
  text: "Min defaults to 0, Max to 100.",
  tag: "h3",
  size: 3
}) %>

<% data = [
  {
    name: 'Rating',
    value: 4.5,
  }
]%>

<%= pb_rails("gauge", props: {
  id: "gauge-min-max",
  chart_data: data,
  min: 0,
  max: 5,
  show_labels: true,
  title: "Product Rating"
}) %>