<%= pb_rails("date_picker", props: {
  label: "onChange",
  picker_id: "date-picker-hooks"
}) %>

<%= javascript_tag do %>
  window.addEventListener("DOMContentLoaded", () => {
    <%# Assign flatpickr instance to variable %>
    const fp = document.querySelector("#date-picker-hooks")._flatpickr

    <%# Define Hook %>
    const alertHook = () => {
      alert('changed')
    }

    <%# Push one or many hooks to onChange config array %>
    fp.config.onChange.push(alertHook)
  })
<% end %>