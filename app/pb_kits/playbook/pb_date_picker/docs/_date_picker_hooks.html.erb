<%= pb_rails("date_picker", props: {
  label: "onChange",
  # on_change: "() => alert('changed')",
  picker_id: "date-picker-hooks"
}) %>

<%= javascript_tag do %>
  window.addEventListener("DOMContentLoaded", () => {
    <%# Access flatpickr instance %>
    const fp = document.querySelector("#date-picker-hooks")._flatpickr
    const alertHook = () => {
      alert('changed')
    }
    console.log(fp)
    fp.config.onChange.push(alertHook)
  })
<% end %>