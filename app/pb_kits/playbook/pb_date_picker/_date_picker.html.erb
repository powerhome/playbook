<%= content_tag(:div,
    aria: object.aria,
    class: object.classname + object.error_class,
    data: object.data,
    id: object.id) do %>
      <div class="input_wrapper">
        <%= pb_rails("text_input", props: {
          aria: object.input_aria,
          autocomplete: "off",
          dark: object.input_dark,
          data: object.input_data,
          disabled: object.disable_input,
          error: object.error,
          id: object.picker_id,
          label: object.hide_label ? nil : object.label,
          name: object.name,
          placeholder: object.placeholder,
          required: object.required ? "required" : nil,
          type: object.type
        }) %>
        <% if !object.hide_icon %>
          <div
              class="<%= object.icon_wrapper_class %>"
              id="cal-icon-<%= object.picker_id %>"
          >
            <%= pb_rails("icon", props: { 
              classname: "cal_icon",
              icon: "calendar-alt"
            }) %>
          </div>
        <% end %>
      </div>

      <%= javascript_tag do %>
      window.addEventListener("DOMContentLoaded", () => {
          datePickerHelper(<%= object.date_picker_config %>)
      })
      <% end %>
<% end %>
