<%= content_tag(:div,
    class: object.classname) do %>
  <% if object.label.present? %>
    <%= pb_rails("caption", props: {text: object.label}) %>
  <% end %>
  <%= content_tag(:div,
      class: "text_input_wrapper") do %>
    <%= tag(:input,
        id: object.id,
        data: object.data,
        class: "text_input",
        name: object.name,
        placeholder: object.placeholder,
        type: object.type,
        value: object.value) %>
  <% end %>
<% end %>
