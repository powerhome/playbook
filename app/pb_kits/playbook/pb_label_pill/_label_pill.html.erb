<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
      <%= pb_rails("caption", props: { text: object.label }) %>
      <%= pb_rails("pill", props: { text: object.pill_value, variant: object.variant, classname: "pb_label_pill_variant" }) %>
<% end %>
