<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>

    <%= pb_rails("date_year_stacked", props: { date: object.start_date,
                                               classname: "pb_date_range_stacked_display pb_date_range_stacked_start_date",
                                               dark: object.dark }) %>

    <div class="pb_date_range_stacked_display">
      <%= pb_rails("body", props: { tag: "span", color: "light" }) do %>
        <%= pb_rails("icon", props: { icon: "long-arrow-right", fixed_width: true, classname: "pb_date_range_stacked_arrow" }) %>
      <% end %>
    </div>

    <%= pb_rails("date_year_stacked", props: { date: object.end_date,
                                               classname: "pb_date_range_stacked_display",
                                               dark: object.dark }) %>
<% end %>
