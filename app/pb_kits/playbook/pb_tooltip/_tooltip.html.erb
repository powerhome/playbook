<%= content_tag(:div,
  id: object.id,
  data: object.data,
  class: object.classname) do %>
    <div class="tooltip_tooltip" id="<%= object.tooltip_id %>" role="tooltip">
      <%= capture(&object.children) %>
      <div class="arrow" id="<%= object.tooltip_id %>-arrow"></div>
    </div>

<% end %>
