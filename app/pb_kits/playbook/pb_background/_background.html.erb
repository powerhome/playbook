<%= content_tag(object.tag,
    aria: object.aria,
    data: object.data,
    id: object.id) do %>
    <% if object.image_url.present? %>
      <div class="<%= object.classname %>" style="background-image: url(<%= object.image_url %>); background-size: cover">
        <%= capture(&object.children) %>
      </div>
    <% else %>
      <div class="<%= object.classname %>">
        <%= capture(&object.children) %>
      </div>
  <% end %>
<% end %>
