<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname("pb_range_slider")) do %>
    <% if object.block? %>
      <%= object.yield(context: self) %>
    <% else %>
      <input type="range" min="<%= object.min %>" max="<%= object.max %>" step="<%= object.step %>" />
    <% end %>
<% end %>
