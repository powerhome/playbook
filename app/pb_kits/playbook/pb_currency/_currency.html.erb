<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>

  <%= object.label_element %>

  <div class="pb_currency_wrapper">
    <%= object.currency_symbol_element %>
    <%= object.amount_element %>
    <%= pb_rails("body", props: {
      text: object.units_element,
      color: "light",
      classname: "unit",
      dark: object.dark
    }) %>
  </div>
<% end %>
