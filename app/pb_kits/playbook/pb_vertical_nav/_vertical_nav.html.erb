<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
  <% if object.title %>
    <%= content_tag(:div, class: "#{object.classname}_title") do %>
      <%= content_tag(:a, class: "#{object.classname}_item_link_text", href: object.link) do %>
        <%= pb_rails("caption", props: { text: object.title }) %>
      <% end %>
    <% end %>
  <% end %>
  <ul><%= capture(&object.children) %></ul>
<% end %>
