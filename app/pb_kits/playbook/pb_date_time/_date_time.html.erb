<%= content_tag(:div,
    aria: object.aria,
    id: object.id,
    data: object.data,
    class: object.classname) do %>

    <%= pb_rails("flex", props: { 
      orientation: "row", 
      horizontal: object.align, 
      vertical: "center" }) do %>

      <%= pb_rails("flex/flex_item") do %>
        <%= pb_rails("date", props: {
          dark: object.dark,
          date: object.date,
          show_day_of_week: object.show_day_of_week,
          timezone: object.timezone,
        }) %>
      <% end %>
      <%= pb_rails("flex/flex_item") do %>
        <%= pb_rails("time", props: {
          margin_left: "md",
          show_icon: object.show_icon,
          tag: "caption",
          time: object.date,
          timezone: object.timezone,
        }) %>
      <% end %>

    <% end %>

<% end %>
