<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
    

    <% if object.size == "lg"%>
      <% if object.day_of_week %>
        <%= pb_rails("title", props: { tag: "div", text: "#{object.date_day_of_week}", size: 3 }) %>
        <%= pb_rails("body", props: {
          text: "•",
          color: "light",
          tag: "div",
        }) %>
      <% end %>
      <% if object.year.to_s == DateTime.now.year.to_s %>
        <%= pb_rails("title", props: { tag: "div", text: "#{object.month} #{object.day}", size: 3 }) %>
      <%# if is current year %>
      <% else %>
        <%= pb_rails("title", props: { tag: "div", text: "#{object.month} #{object.day}, #{object.year}", size: 3 }) %>
      <% end %>


    <% else %>
        <!-- icon -->
        <% if object.icon %>
          <%= pb_rails("body", props: {
            color: "light",
            tag: "div",
          }) do %>
            <%= pb_rails("icon", props: { icon: "calendar-alt", fixed_width: true }) %>
          <% end %>
        <% end %>

        <!-- day_of_week -->
        <% if object.day_of_week %>
          <%= pb_rails("title", props: { tag: "div", text: object.date_day_of_week, size: 4 }) %>
          <%= pb_rails("body", props: {
          text: "•",
          color: "light",
          tag: "div",
        }) %>
        <% end %>

        <!-- month day, year -->
        
        <%# if not current year %>
        <% if object.year.to_s == DateTime.now.year.to_s %>
          <%= pb_rails("title", props: { tag: "div", text: "#{object.month} #{object.day}", size: 4 }) %>
        <%# if is current year %>
        <% else %>
          <%= pb_rails("title", props: { tag: "div", text: "#{object.month} #{object.day}, #{object.year}", size: 4 }) %>
        <% end %>

    <% end %>
  
<% end %>

