<%= content_tag(:div,
    id: object.id,
    data: object.data,
    aria: object.aria,
    class: object.classname) do %>

    <label class="pb_toggle_wrapper">
      <% if object.children %>
        <%= capture(&object.children) %>
      <% else %>
        <%= object.input %>
      <% end %>
      <div class="pb_toggle_control"></div>
    </label>
<% end %>
