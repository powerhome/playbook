<%= content_tag(:div,
    id: object.id,
    data: object.data,
    aria: object.aria,
    class: object.classname(object.kit_class),
    ) do %>

    <label class="pb_toggle_wrapper">
      <input type="checkbox" <%= object.name %> <%= object.value %> <%= object.checked %> />
      <div class="pb_toggle_control"></div>
    </label>
<% end %>
