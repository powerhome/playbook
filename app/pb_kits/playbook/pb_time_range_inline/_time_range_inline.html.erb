<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
      <% text_kit = "caption" %>
      <% text_timezone_color = nil %>
      <% if object.size == "sm" %>
        <% text_kit = "body" %>
      <%  text_timezone_color = "light" %>
      <% end %>
      <% if object.icon == true %>
        <%= pb_rails("icon", props: { icon: "clock", fixed_width: true }) %>
      <% end %>
      <%= pb_rails(text_kit, props: { tag: "span", text: object.format_start_time_string + " â€” " + object.format_end_time_string }) %>
      <% if object.timezone == true %>
        <%= pb_rails(text_kit, props: { tag: "span", color: text_timezone_color, text: object.pb_date_end_time.to_timezone.upcase }) %>
      <% end %>
<% end %>