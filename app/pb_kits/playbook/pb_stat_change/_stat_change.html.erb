<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
      <%= pb_rails("body", props: { status: object.status }) do %>
        <%= pb_rails("icon", props: { fixed_width: true, icon: object.icon }) if object.icon %>
        <%= "#{object.value}%" if object.value %>
      <% end %>
<% end %>
