<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname("pb_checkbox_card")) do %>
  <%= pb_rails("card", props: { selected: object.selected, padding: "none" }) do %>
    <div class="pb_checkbox_card_container">
      <span class="pb_checkbox_card_checkbox">
        <%= object.checkbox %>
      </span>
      <span class="pb_checkbox_card_content">
        <%= object.content %>
      </span>
    </div>
  <% end %>
<% end %>
