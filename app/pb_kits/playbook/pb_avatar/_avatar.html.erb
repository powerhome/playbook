<%= content_tag(:div,
    id: object.id,
    data: object.data(initials: object.initials),
    class: object.classname,
    aria: object.aria) do %>
  <%= content_tag(:div,
      data: { initials: object.initials },
      class: "avatar_wrapper") do %>
    <%= pb_rails("image", props: { text: object.image}) if object.image %>
  <% end %>
  <%= pb_rails("online_status", props: { status: object.status }) if object.status%>
<% end %>
