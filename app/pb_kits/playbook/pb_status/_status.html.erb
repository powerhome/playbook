<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname(object.kit_class)) do %>

<div class='status_wrapper <%="#{object.first_class} #{object.last_class}"%>'>
    <% object.statuses.each do |status| %>
      <div class="status_item <%= object.active == status ? "active" : "" %>" id="<%= status %>"></div>
    <% end %>
  </div>
<% end %>
