                <% ux_ui = [{
                    name: 'Registrations',
                    data: [1475, 524, 1344, 780, 200, 900]
                }] %>
                <%= pb_rails("bar_graph", props: {
                    axis_title: 'UX/UI',
                    chart_data: ux_ui,
                    id: "ux-ui",
                    y_axis_min: 0,
                    x_axis_categories:['\'17 LDN', '\'17 LA', '\'18 SF', '\'19 AMS', '\'20 TOR', '\'20 SF'],
                    height: '30%'
                }) %>

                <% product_designers = [{
                    name: 'Registrations',
                    data: [1475, 524, 1344, 780, 200, 900]
                }] %>
                <%= pb_rails("bar_graph", props: {
                    axis_title: 'Product Designers',
                    chart_data: product_designers,
