                                <%= pb_rails("caption", props: { text: "2020 | TOR", size: "xs" }) %>
                            <% end %>
                            <%= pb_rails("flex/flex_item") do %>
                                <%= pb_rails("caption", props: { text: "Total Registered" }) %>
