                            <%= pb_rails("flex/flex_item") do %>
                                <%= pb_rails("caption", props: { text: "Graphic" }) %>
                            <% end %>
                            <%= pb_rails("flex/flex_item") do %>
                                <%= pb_rails("title", props: { text: "937", tag: "h3", size: 3 }) %>
                            <% end %>
                        <% end %>        
                    <% end %>
                    <%= pb_rails("flex/flex_item") do %>
                        <%= pb_rails("flex", props: {orientation: "column", horizontal: "center"}) do %>
                            <%= pb_rails("flex/flex_item") do %>
                                <%= pb_rails("caption", props: { text: "UX/UI" }) %>
                            <% end %>
                            <%= pb_rails("flex/flex_item") do %>
