{
  "extends": [
    "config:base"
  ],
  "major": {
    "enabled": false
  },
  "prCreation": "not-pending",
  "prConcurrentLimit": 2,
  "packageRules": [
    {
      "packageNames": [
        "@rails/webpacker",
        "babel",
        "bundler",
        "node-sass",
        "rails",
        "react",
        "react-dom",
        "react-select",
        "yarn",
        "typescript"
      ],
      "packagePatterns": [
        "^(@babel|babel|webpacker|webpack|node)"
      ],
      "enabled": false
    }
  ],
  "hostRules": [
    {
      "matchHost": "registry.npmjs.org",
      "hostType": "npm",
    },
    {
      "matchHost": "npm.powerapp.cloud",
      "username": "renovate",
      "encrypted": {
        "password": ""
      }
    }
  ]
}
