{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": false,
    "jsx": "react-jsx",
    "lib": ["dom", "es2015", "es2016", "es2019", "dom.iterable"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2016",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "app/pb_kits/playbook/utilities/globalProps.ts",
    "app/javascript/*.js",
    "app/pb_kits/playbook/**/*.ts",
    "app/javascript/kits.js",
    "app/entrypoints/playbook.js",
    "app/entrypoints/playbook-rails-react-bindings.js",
    "app/entrypoints/playbook-rails.js",
  ]
}
