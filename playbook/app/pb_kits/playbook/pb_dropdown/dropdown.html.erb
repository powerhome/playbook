<%= pb_content_tag do %>
    <div class="dropdown_wrapper" style="position: relative">
        <%= pb_rails("dropdown/dropdown_trigger", props: {}) %>
        <%= pb_rails("dropdown/dropdown_container", props: {}) do %>
            <% if options.present? %>
                <% options.each do |option| %>
                    <%= pb_rails("dropdown/dropdown_option", props: {option: option}) %>
                <% end %>
            <% end %>
        <% end %>
    </div>
<% end %>
  