<%= pb_content_tag do %>
    <% if object.searchbar %>
        <%= pb_rails("text_input", props: {padding_top:"xs", padding_x:"xs"}) do %>
            <input 
            type="text"
            placeholder="Searchâ€¦"
            data-dropdown-search
            autocomplete="off"
            />
        <% end %>
    <% end %>
    <%= pb_rails("list", props: {ordered: false, borderless: false}) do %>
            <% if content.present? %>
                <%= content.presence %>
            <% else %>
                <%= pb_rails("list/item", props: {
                    display: "flex",
                    justify_content: "center",
                    padding:"xs",
                    }) do %>
                        <%= pb_rails("body", props: {text: "No option"}) %>
                <% end %>
            <% end %>
    <% end %>
<% end %>
