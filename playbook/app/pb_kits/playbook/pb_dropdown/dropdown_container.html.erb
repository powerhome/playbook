<%= pb_content_tag(:div, style: object.container_style) do %>
    <%= pb_rails("list", props: {ordered: false, borderless: false}) do %>
        <%= pb_rails("list/item", props: {
            display: "flex", 
            justify_content: "center", 
            padding:"none", 
            cursor: "pointer"
            }) do %> 
                <% if content.present? %> 
                    <%= content.presence %>
                <% else %> 
                <%= pb_rails("list/item", props: {
                    display: "flex", 
                    justify_content: "center", 
                    padding:"xs", 
                    }) do %> 
                    <%= pb_rails("body", props: {text: "No option"}) %>
                <% end %>
                <% end %>
            <% end %>
    <% end %>        
<% end %>