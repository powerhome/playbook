<%= pb_content_tag do %>
  <% if date_area %>
    <%= date_area %>
  <% else %>
    <%= pb_rails("timeline/date_area", props: { date: date }) %>
  <% end %>

  <% if node_area %>
    <%= node_area %>
  <% else %>
    <%= pb_rails("timeline/node_area", props: { icon: icon, icon_color: icon_color }) %>
  <% end %>

  <% if detail_area %>
    <%= detail_area %>
  <% else %>
    <%= pb_rails("timeline/detail_area") do %>
      <%= content %>
    <% end %>
  <% end %>
<% end %>
