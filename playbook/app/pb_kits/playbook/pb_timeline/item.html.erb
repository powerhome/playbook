<%= pb_content_tag do %>
  <% if label %>
    <%= label %>
  <% else %>
    <%= pb_rails("timeline/label", props: { date: date, show_current_year: show_current_year }) %>
  <% end %>

  <% if step %>
    <%= step %>
  <% else %>
    <%= pb_rails("timeline/step", props: { icon: icon, icon_color: icon_color }) %>
  <% end %>

  <% if detail%>
    <%= detail%>
  <% else %>
    <%= pb_rails("timeline/detail") do %>
      <%= content %>
    <% end %>
  <% end %>
<% end %>
