<%= pb_content_tag do %>
  <% if object.icon.present? %>
    <%= pb_rails("timeline/date_area", props: { date: object.date }) %>
    <%= pb_rails("timeline/node_area", props: { icon: object.icon,
                                                icon_color: object.icon_color }) %>
    <%= pb_rails("timeline/detail_area") do %>
      <%= content.presence %>
    <% end %>
  <% else %>
    <%= content.presence %>
  <% end %>
<% end %>
