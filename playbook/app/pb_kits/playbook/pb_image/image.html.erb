<% if content.present? %>
    <div style="position: relative; width: fit-content;">
        <%= tag(:img, 
            id: object.id, 
            data: object.data.merge(src: object.url), 
            class: object.classname, 
            aria: object.aria,
            src: object.url,
            alt: object.alt,
            onerror: object.on_error,
            )
        %>  
        <%= content %>
    </div>
<% else %>
    <%= tag(:img, 
        id: object.id, 
        data: object.data.merge(src: object.url), 
        class: object.classname, 
        aria: object.aria,
        src: object.url,
        alt: object.alt,
        onerror: object.on_error,
        )
    %>  
<% end %>