<% categories = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'] %>


<% chartOptionsFirst = {
    title: { text: "Alignment of Legend" },
    series: data,
    xAxis: {
