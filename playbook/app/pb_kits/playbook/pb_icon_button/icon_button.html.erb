<%= pb_content_tag do %>
  <%= pb_rails("button", props: { aria: object.aria,
                                  type: object.type,
                                  link: object.link,
                                  new_window:object.new_window,
                                  target: object.target,
                                  dark: object.dark,
                                  border_radius: "xs" }) do %>
  <%= pb_rails("icon", props: { icon: object.icon,
                                fixed_width: true,
                                dark: object.dark,
                                size: object.size,
                                color: "text_lt_default",
                                classname: "icon_button_icon",
                                padding_x: "xxs", padding_y: "xs" }) %>
  <% end %>
<% end %>
