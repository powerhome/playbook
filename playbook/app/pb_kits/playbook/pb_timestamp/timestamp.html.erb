<%= content_tag(:div,
  aria: object.aria,
  id: object.id,
  data: object.data,
  class: object.classname) do %>

  <% if object.unstyled %>
    <div><%= object.timestamp_text %></div>
  <% else %>
    <%= pb_rails("caption", props: { text: object.timestamp_text, size: 'xs', dark: object.dark }) %>
  <% end %>
<% end %>
