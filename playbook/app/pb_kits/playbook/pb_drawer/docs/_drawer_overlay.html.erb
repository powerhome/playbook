<%= pb_rails("flex") do %>
    <%= pb_rails("button", props: { text: "No Overlay Drawer", margin_right: "sm", data: {"open-drawer": "drawer-10"} }) %>

    <%= pb_rails("drawer", props: { 
        id:"drawer-10", 
        overlay: false
    }) do  %>
        Test me (No Overlay)
    <% end %>
    
    
    <%= pb_rails("button", props: { text: "Overlay Drawer", data: {"open-drawer": "drawer-11"} }) %>
    
    <%= pb_rails("drawer", props: { 
        id:"drawer-11", 
        placement: "right"
    }) do  %>
        Test me (Has Overlay)
    <% end %>
<% end %>

