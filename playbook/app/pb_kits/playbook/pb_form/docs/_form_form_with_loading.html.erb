<%= pb_form_with(scope: :example, url: "", method: :get, loading: true) do |form| %>
  <%= form.text_field :example_text_field, props: { label: true } %>

  <%= form.actions do |action| %>
    <%= action.submit %>
    <%= action.button props: { type: "reset", text: "Cancel", variant: "secondary" } %>
  <% end %>
<% end %>
