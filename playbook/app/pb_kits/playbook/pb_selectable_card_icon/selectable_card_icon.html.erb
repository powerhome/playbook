<%= pb_content_tag(:div, **combined_html_options) do %>

  <%= pb_rails("selectable_card", props: {
    input_id: object.input_id,
    name: object.name,
    value: object.value,
    checked: object.checked,
    disabled: object.disabled,
    custom_icon: object.custom_icon,
    icon: object.checkmark,
    multi: object.multi,
    dark: object.dark,
    input_options: object.input_options
  }) do %>
    <%= pb_rails("selectable_icon", props: {
      custom_icon: object.custom_icon,
      icon: object.icon,
      inputs: "disabled",
      text: object.title_text,
      dark: object.dark
    }) %>

    <%= pb_rails("body", props: {
      text: object.body_text,
      color: "light",
      dark: object.dark
    }) %>
  <% end %>
<% end %>
