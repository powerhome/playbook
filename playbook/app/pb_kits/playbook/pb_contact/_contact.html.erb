<%= content_tag(:div,
    aria: object.aria,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
  <%= pb_rails("body", props: { 
        tag: "span", 
        classname: "pb_contact_kit", 
        color: "light" 
      }) do %>
    <%= pb_rails("icon", props: { 
          icon: object.contact_icon, 
          fixed_width: true 
        }) %>
    <%= object.formatted_contact_value if object.contact_value %>

    <%= pb_rails("caption", props: { 
          text: object.contact_detail, 
          tag: 'span', 
          size: 'xs'
        }) if object.contact_detail %>
  <% end %>
<% end %>
