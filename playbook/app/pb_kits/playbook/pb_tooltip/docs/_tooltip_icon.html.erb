<%= pb_rails "flex", props: { flex_direction: "row", gap: "md", wrap: true } do %>
  <%= pb_rails "button", props: { id: "tool-tip-with-icon", text: "Send Email" } %>
  <%= pb_rails "tooltip", props: { trigger_element_id: "tool-tip-with-icon", tooltip_id: "tool-tip-with-icon", position: "top" } do %>
    <%= pb_rails("icon", props: { icon: "paper-plane", fixed_width: true, color: "white", size: "lg" }) %>
