<%= pb_rails("flex", props: {orientation: "column", row_gap:"md"}) do %>
  <%= pb_rails("form_group") do %>
    <%= pb_rails("text_input", props: { placeholder: "Enter Artist Name" }) %>
    <%= pb_rails("select", props: {
      blank_selection: "Genre",
      options: [
        { value: "Country" },
        { value: "Pop" },
        { value: "Rock" },
        { value: "Hip-Hop/Rap" },
        { value: "Classical" },
        { value: "Gospel" },
        { value: "Alternative" },
        { value: "Indie" },
        { value: "Other" },
      ]
    }) %>
  <% end %>
  <%= pb_rails("form_group") do %>
    <%= pb_rails("select", props: {
        blank_selection: "Phone",
        options: [
          { value: "Cell" },
          { value: "Work" },
          { value: "Home" },
        ]
      }) %>
      <%= pb_rails("phone_number_input", props: {
        id: "phone"
    }) %>
  <% end %>
  <%= pb_rails("form_group") do %>
      <%= pb_rails("phone_number_input", props: {
        id: "phone2"
      }) %>
      <%= pb_rails("select", props: {
        blank_selection: "Phone",
        options: [
          { value: "Cell" },
          { value: "Work" },
          { value: "Home" },
        ]
      }) %>
  <% end %>
<% end %>
