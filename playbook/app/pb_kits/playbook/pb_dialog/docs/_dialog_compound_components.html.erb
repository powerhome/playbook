<%= pb_rails("button", props: { text: "Open Complex Dialog", data:{dialogComplex: "#dialog-complex"} }) %>

<%= pb_rails("dialog", props: { id:"dialog-complex", size: "lg" }) do %>
    <%= pb_rails("dialog/dialog_header") do %>
        <%= pb_rails("caption", props: { text: "This is a complex dialog" }) %>
    <% end %>
    <%= pb_rails("dialog/dialog_body") do %>
        <%= pb_rails("caption", props: { text: "Description", margin_bottom: "xs" }) %>
        <%= pb_rails("rich_text_editor", props: {id: "default", value: "Add your text here"}) %>
    <% end %>
    <%= pb_rails("dialog/dialog_footer", props: {cancel_button: "Cancel", confirm_button: "Confirm", confirm_button_id:"confirm-complex"}) %>
<% end %>

<script type="text/javascript">
const buttonComplex = document.querySelector("button[data-dialogComplex]")
const confirmBtn = document.querySelector("#confirm-complex")

buttonComplex.onclick = ()  => {
  document.querySelector("#dialog-complex").showModal();
};

confirmBtn.onclick = () => {
    console.log("complex clicked")
}
</script>