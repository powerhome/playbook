<%= pb_rails("button", props: { text: "Open Dialog with Overflow Visible", data: {"open-dialog": "dialog-overflow-visible"} }) %>

<%= pb_rails("dialog", props: { 
    id: "dialog-overflow-visible", 
    size: "md", 
    overflow: "visible"
}) do %>
  <%= pb_rails("dialog/dialog_header", props: { id: "dialog-overflow-visible" } ) do %>
    <%= pb_rails("body", props: { text: "Select Date and Location" }) %>
  <% end %>
  <%= pb_rails("dialog/dialog_body") do %>
    <%= pb_rails("caption", props: { text: "Start Date", margin_bottom: "xs" }) %>
    <%= pb_rails("date_picker", props: {
      name: "start_date",
      picker_id: "start-date-picker",
      placeholder: "Select start date",
      min_date: "01/01/2020",
      max_date: "12/31/2025",
      static_position: false
    }) %>
    <%= pb_rails("caption", props: { text: "End Date", margin_bottom: "xs", margin_top: "md" }) %>
    <%= pb_rails("date_picker", props: {
      name: "end_date",
      picker_id: "end-date-picker",
      placeholder: "Select end date",
      min_date: "01/01/2020",
      max_date: "12/31/2025",
      static_position: false
    }) %>
    <%= pb_rails("caption", props: { text: "Location", margin_bottom: "xs", margin_top: "md" }) %>
    <%= pb_rails("typeahead", props: {
      options: typeahead_options,
      placeholder: "Select a location...",
      id: "location-typeahead"
    }) %>
  <% end %>
  <%= pb_rails("dialog/dialog_footer", props: {
    cancel_button: "Cancel",
    confirm_button: "Save",
    confirm_button_id: "confirm-overflow-visible",
    id: "dialog-overflow-visible"
  }) %>
<% end %>

