<%= pb_rails("button", props: { text: "Open Dialog", data:{dialog: "#dialog-button"} }) %>

<%= pb_rails("dialog", props: { id:"dialog-1", size: "sm" }) do %>
  <%= pb_rails("dialog/dialog_header", props: {title: "This is a header"}) %>
  <%= pb_rails("dialog/dialog_body", props: { text: "I am a dialog"}) %>
  <%= pb_rails("dialog/dialog_footer", props: {cancel_button: "Cancel", confirm_button: "Confirm", confirm_button_id:"confirm-1"}) %>
<% end %>

<script type="text/javascript">
const button = document.querySelector("button[data-dialog]")
const confirmButton = document.querySelector("#confirm-1")

button.onclick = ()  => {
  document.querySelector("#dialog-1").showModal();
};

confirmButton.onclick = () => {
    console.log("clicked")
}
</script>