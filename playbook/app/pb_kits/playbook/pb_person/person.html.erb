<%= content_tag(:div,
    aria: object.aria,
    id: object.id,
    data: object.data,
    class: object.classname,
    **combined_html_options) do %>
      <%= pb_rails("body", props: {
        tag: "span",
        classname: "pb_person_first" }) { object.first_name } %>
      <%= pb_rails("title", props: {
        text: object.last_name,
        size: 4 }) if object.last_name %>
<% end %>
