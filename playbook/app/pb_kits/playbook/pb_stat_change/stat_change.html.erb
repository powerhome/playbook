<%= pb_content_tag do %>
  <%= pb_rails("body", props: { status: object.status, dark: object.dark }) do %>
    <%= pb_rails("icon", props: { fixed_width: true, icon: object.returned_icon, dark: object.dark }) if object.returned_icon %>
    <%= "#{object.value}%" if object.value %>
  <% end %>
<% end %>
