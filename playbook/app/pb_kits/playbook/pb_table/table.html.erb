<% if object.responsive_classname %>
  <% responsive_class = object.responsive_classname %>
<% else %>
  <% responsive_class = nil %>
<% end %>

<%= content_tag(:div, class: responsive_class, 'data-pb-table-wrapper' => true) do %>
  <% if object.tag == "table" %>
    <%= pb_content_tag(:table) do %>
      <%= content.presence %>
    <% end %>
  <% else %>
    <%= pb_content_tag do %>
      <%= content.presence %>
    <% end %>
  <% end %>
<% end %>