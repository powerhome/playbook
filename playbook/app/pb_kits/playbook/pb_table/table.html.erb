<%= content_tag(:div) do %>
  <%= content_tag(:table,
      aria: object.aria,
      class: object.classname,
      data: object.data,
      id: object.id) do %>
    <%= content.presence %>
  <% end %>
<% end %>
<style>
  <% id = "##{object.id}" if object.id.present? %>
  <% selector = "#{id} td:nth-child(#{highlight_column})" %>
    <%= selector %> {
      background-color: #E5F2FF;
    }
</style>
