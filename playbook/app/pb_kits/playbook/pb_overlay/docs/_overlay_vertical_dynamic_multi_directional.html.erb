<%= pb_rails("overlay", props: { layout: { "x": "xl" }, color: "card_light", dynamic: true }) do %>
    <%= pb_rails("flex", props: { column_gap: "lg", orientation: "row", overflow_x: "auto" }) do %>
        <% 15.times do %>
            <%= pb_rails("flex/flex_item") do %>
                <%= pb_rails("card") do %>
                    Card content
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>