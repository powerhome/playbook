<%= pb_content_tag do %>
        <%= pb_rails("table", props: { size: "sm", data_table: true, number_spacing:"tabular", responsive:"none", dark: dark, classname: object.loading ? "content-loading" : ""  }.merge(object.table_props)) do %>
          <% if content.present? %>
            <% content.presence %>
          <% else %>
            <%= pb_rails("advanced_table/table_header", props: { column_definitions: object.column_definitions, enable_toggle_expansion: object.enable_toggle_expansion, loading: object.loading }) %>
            <%= pb_rails("advanced_table/table_body", props: { id: object.id, table_data: object.table_data, column_definitions: object.column_definitions, loading: object.loading }) %>
          <% end %>
        <% end %>
<% end %>