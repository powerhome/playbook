<%= pb_rails("flex", props: {orientation: "column"}) do %>
    <%= pb_rails("flex/flex_item") do %>
        <%= pb_rails("radio", props: {
            text: "Disabled unselected",
            input_options: {
                tabindex: 0,
                disabled: true,
            },
            margin_bottom: "xs",
            name: "DisabledGroup",
            value: "Disabled unselected",
        }) %>
    <% end %>
    <%= pb_rails("flex/flex_item") do %>
        <%= pb_rails("radio", props: {
            text: "Disabled selected",
            input_options: {
                tabindex: 0,
                disabled: true,
            },
            checked: true,
            name: "DisabledGroup",
            value: "Disabled selected"
        }) %>
    <% end %>
<% end %>
