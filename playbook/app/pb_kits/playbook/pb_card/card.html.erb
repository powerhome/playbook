<%= content_tag(object.tag,
    id: object.id,
    data: object.data,
    class: object.classname,
    aria: object.aria,
    dark: object.dark) do %>
  <%= pb_rails("card/card_body", props: { padding: object.body_padding, flex_direction: object.body_flex_direction, flex_wrap: object.body_flex_wrap }) do %>
    <%= content %>
  <% end if content.present? %>
<% end %>


