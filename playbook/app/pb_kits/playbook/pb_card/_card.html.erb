<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname,
    aria: object.aria,
    dark: object.dark) do %>
  <% if object.children %>
    <%= pb_rails("card/card_body", props: { padding: object.body_padding, children: object.children }) %>
  <% end %>
<% end %>
