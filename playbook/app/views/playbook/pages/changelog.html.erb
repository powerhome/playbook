<div class="changelog-card-collection">
  <%= pb_rails("flex", props: { orientation: "column", horizontal: "stretch" }) do %>
    <%= pb_rails("flex/flex_item", props: { margin_top: "md", margin_bottom: "sm", margin_: "md" }) do %>
      <%= pb_rails("title", props: { text: "Changelog", size: 1, margin_x: "sm" })%>
    <% end %>
    <%= pb_rails("flex/flex_item", props: { margin_left: "sm", margin_bottom: "xs" }) do %>
      <%= pb_rails("body", props: { text: "Playbook releases operates on a weekly release schedule. We typically create a new release every Thursday." }) %>
    <% end %>

      <%= pb_rails("flex/flex_item", props: { margin_bottom: "md" }) do %>
        <%= pb_rails("card", props: { margin: "sm", padding: "lg" }) do %>
          <%= markdown(@data) %>
        <% end %>
      <% end %>
    <%= pb_rails("flex/flex_item", props: { margin: "md" })  do %>
      <%= pb_rails("button", props: { text: "This Changelog was automatically generated by github_changelog_generator", variant: "link", link: "https://github.com/github-changelog-generator/github-changelog-generator"}) %>
    <% end %>
  <% end %>
</div>
